# https://git-scm.com/docs/git-config
[alias]
    ad = add
    ada = add --all .
    bl = blame
    br = branch
    bra = branch --all
    brd = branch --delete
    ch = checkout
    cl = clone
    cm = commit
    cmal = commit --all
    cmam = commit --amend
    cmm = commit -m
    co = config
    di = diff --ignore-cr-at-eol
    dit = difftool
    diw = diff --word-diff
    fe = fetch
    fea = fetch --all
    fst = !git fetch --all && git status
    he = help
    lfm = ls-files -m
    lo = log
    loo = log --oneline
    lsf = ls-files
    me = merge
    pl = pull
    ps = push
    psf = push --force
    psu = push --set-upstream
    rb = rebase
    rf = reflog
    rs = reset
    rts = restore --staged
    rv = revert
    ss = stash
    ssa = stash apply
    ssc = stash clear
    ssd = stash drop
    ssl = stash list
    ssp = stash pop
    sss = stash save
    st = status
    tree = log --all --decorate --graph --oneline
[color]
    ui = true
[core]
    autocrlf = input
    editor = vim -c 'startinsert'  # nano
    eol = native
    filemode = false
    fscache = true
    hideDotFiles = false
    preloadindex = true
[credential]
    helper =
[credential "helperselector"]
    selected = <no helper>
[diff]
    tool = vimdiff
[gc]
    auto = 256
[pull]
    rebase = false  # false for fast-forward/recursive, merges to auto-rebase
[push]
    autoSetupRemote = true
    default = simple
[rerere]
    enabled = true
[user]
    email =
    name =
