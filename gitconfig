# https://git-scm.com/docs/git-config
[alias]
    ad = add
    ada = add --all .
    bl = blame
    br = branch
    bra = branch --all
    brd = branch --delete
    ch = checkout
    cl = clone
    cm = commit
    cmal = commit --all
    cmam = commit --amend
    co = config
    di = diff
    diw = diff --word-diff
    fe = fetch
    fea = fetch --all
    fst = !git fetch --all && git status
    he = help
    lfm = ls-files -m
    lo = log
    loo = log --oneline
    lsf = ls-files
    me = merge
    pl = pull
    ps = push
    psf = push --force
    psu = push --set-upstream
    rb = rebase
    rf = reflog
    rs = reset
    rv = revert
    ss = stash
    ssa = stash apply
    ssc = stash clear
    ssl = stash list
    ssp = stash pop
    sss = stash save
    st = status
    tree = log --all --decorate --graph --oneline
[color]
    ui = true
[core]
    autocrlf = true
    editor = nano  # vim -c 'startinsert'
    # eol = lf
    fscache = true
    hideDotFiles = false
    preloadindex = true
[credential "helperselector"]
    selected = <no helper>
[gc]
    auto = 256
[pull]
    rebase = false  # false for fast-forward/recursive, merges to auto-rebase
[push]
    default = simple
